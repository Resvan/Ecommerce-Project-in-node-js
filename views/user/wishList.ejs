<div id="wishlist-page" class="mt-5 pt-5">
    <div class="container mt-3 pt-5 mb-5 justify-content-center">
        <% if(wishlistItems.length> 0){ %>
        <h3 class="mb-3 text-center text-primary font-weight-bold">Wishlist</h3>
        <% wishlistItems.forEach(function(item){ %>
        <div class="row ">
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card mt-2 d-flex" style="width: 18rem;">
                        <img src="/product/<%= item.product.image1 %>" class="card-img-top" alt="">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 id="product-name" class="card-title"><b>
                                          <a href="/product-details?id=<%= item.product._id %>"><%= item.product.name %></a> 
                                        </b></h5>
                                </div>
                                <div class="col">
                                    <h5 class="card-title text-dark"><b>
                                        Rs:<%= item.product.price %>
                                        </b></h5>
                                </div>
                                <div onclick="removeFromWishlist('<%= item.product._id %>')">
                                    <span class="mr-3"><i class="fa fa-trash fa-lg js-wish-detail" aria-hidden="true"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <% }else { %>
            <h1>Wishlist is empty</h1>
            <% } %>
    </div>
</div>

