<div class="mt-5 pt-5">
    <div class="container p-t-100 mb-5 justify-content-center">
        <h3 class="mb-3 text-center text-primary font-weight-bold">Wallet History</h3>
        <table class="table table-borderless table-responsive">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Date</th>
                    <th scope="col">OrderId</th>
                    <th scope="col">Status</th>
                    <th scope="col">Amount</th>
                </tr>
            </thead>

            <tbody>
                    <% var i=1; user.walletHistory.forEach(function(item){ %>
                    <tr>
                        <td>
                            <%= i++ %>
                        </td>
                        <td> 
                            <%= item.date.getDate()+"."+item.date.getMonth()+"."+item.date.getFullYear()  %>
                        </td>
                        <td>
                            <%= item.orderId %>
                        </td>
                        <td>
                            <%= item.status %>
                        </td>
                        <td>
                            <%= item.amount %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            <h5>Wallet :Rs<b><%= user.wallet %></b></h5>
        </table>
    </div>
</div>