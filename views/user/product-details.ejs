<script>
    $(document).ready(function(){
        checkStock()
    })

    function checkStock(){
        let outOfStock = document.getElementById('outOfStock')
        let size = document.getElementById('p-size')
        var proSize = size.options[size.selectedIndex].text;
        let stock = document.getElementById(proSize).value.trim()
        let button = document.getElementById('cart-button')
        if(stock== 0){
            button.style.display = 'none'
            outOfStock.innerText = 'Out of stock'
        }else{
            outOfStock.innerText = ''
            button.style.display = 'block'
        }
        
    }
</script>


