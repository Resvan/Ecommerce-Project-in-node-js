<div class="container-fluid">
    <div class="row mt-5 mb-5">
        <div class="col">
            <div class="card bg-default shadow">
                <div class="card-header bg-transparent border-0">
                    <h3 class="text-white mb-0">Ordered Products</h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-dark table-flush" id="orderedProducts">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Product</th>
                                <th scope="col">Name</th>
                                <th scope="col">Qantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Address</th>
                            </tr>
                        </thead>
                        <tbody>
                                <% var i=1; orederdItems.forEach(function(item){ %>
                                    <tr>
                                        <td>
                                            <p><%= i++ %></p>
                                        </td>
                                        <td>
                                        
                                            <a href="#" class="avatar rounded-circle">
                                                <img alt="Image placeholder" src="/product/<%= item.product.image1 %>">
                                            </a>
                                        
                                        </td>
                                        <td>
                                            <%= item.product.name %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                            <td>
                                                Rs:<%= item.product.price %>
                                            </td>
                                        <td>
                                            <%= item.address.name %><br>
                                                <%= item.address.housename %>,<%= item.address.town %> <br>
                                                        <%= item.address.district %>,<%= item.address.pincode %>
                                        </td>
                                    </tr>
                                   
                                    
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#orderedProducts').DataTable({
            //"dom": "blfrti",
            "searching": false,
            "paging": true,
            'ordering': false,
            'info': false,
            "lengthChange": false,
            //"paginationType": "custom",
        });
    });
</script>