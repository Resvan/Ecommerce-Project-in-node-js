<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="bg-white card pt-5">
                <canvas class="" id="line"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class=" card pt-5 " style="background-color:#fff;">
                <canvas class="p-2" id="bar"></canvas>
            </div>
        </div>
    </div>
    <div class="bg-white mt-3 card pt-5">
        <canvas class="" id="pie"></canvas>
    </div>
    <div class="row">
        <div class="col-md-12  mt-4" id="salesReport">
            <h1 class="text-center"><b>Quick Analysis</b></h1>
            <table class="table align-items-center table-flush" id="quickreport">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Percentage</th>
                        <th scope="col">Eidt</th>
                        <th scope="col">Delte</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-12  mt-4" id="salesReport">
            <h1 class="text-center"><b>All Transactions</b></h1>
            <table class="table align-items-center table-flush" id="data">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Date</th>
                        <th scope="col">User</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Payment</th>
                        <th scope="col">Status</th>

                    </tr>
                </thead>
                <tbody>
                    <% data.currentOrders.forEach(order=>{ %>
                        <tr>
                            <td>1</td>
                            <td>
                                <%= order.date %>
                            </td>
                            <td>
                                <%= order.address.name %>
                            </td>
                            <td>
                                <%= order.total %>
                            </td>
                            <td>
                                <%= order.paymentMethod %>
                            </td>
                            <td>
                                <%= order.status %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>
    </div>
</div>
