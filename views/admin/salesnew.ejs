            ],
            "searching": true,
            "paging": false,
            'ordering': false,
            'info': false
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>
    var line = document.getElementById('line').getContext('2d');
    var chart = new Chart(line, {
        // The type of chart we want to create
        type: 'bar',

        // The data for our dataset
        data: {
            labels: ['COD', 'Razorpay', 'Paypal', 'wallet'],
            datasets: [{
                label: 'Payment Method',
                backgroundColor: ['rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 206, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(153, 102, 255, 0.8)',
                    'rgba(255, 159, 64, 0.8)'],



                data: ['<%= data.cod %>', '<%= data.razorpay %>', '<%= data.paypal %>', '<%= data.wallet %>']
            }]
        },

        // Configuration options go here
        options: {
            scales: {
                yAxes: [{
                    stacked: true
                }]
            }
        }
    });
    var ctx = document.getElementById('bar').getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'polarArea',

        // The data for our dataset
        data: {
            labels: ['Total Orders', 'Success Orders', 'Fail Orders'],
            datasets: [{
                label: 'Order Summary',
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',

                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1,


                data: ['<%= data.totalOrders %>', '<%= data.successOrders %>', '<%= data.failOrders %>']
            }]
        },

        // Configuration options go her e
        options: {}
    });
    var pie = document.getElementById('pie').getContext('2d');
    var chart = new Chart(pie, {
        // The type of chart we want to create
        type: 'doughnut',

        // The data for our dataset
        data: {
            labels: ['Total Sales Amount', 'Total Discount Amount'],
            datasets: [{

                backgroundColor: [

                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 206, 86, 0.8)'
                ],
                borderColor: [

                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],


                data: [15, 25]
            }]
        },

        // Configuration options go here
        options: {
            scales: {
                yAxes: [{
                    stacked: true
                }]
            }
        }
    });
</script>