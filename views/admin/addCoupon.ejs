            <div class="card bg-secondary shadow border-0">
                <div class="card-body px-lg-5 py-lg-5">
                    <form action="/admin/add-coupon" method="post">

                                <div class="row mb-2">
                                    <div class="col">
                                        <div class="form-outline">
                                            <label for="name">Coupen Name</label>
                                            <input class="form-control" id="name" onkeyup="validateName()" type="text"
                                                name="name" />
                                        </div>
                                        <div><span id="name-error"></span></div>
                                        <label class="pt-4 ">Starting Date</label>
                                        <input type="Date" class="form-control" required name="starting" id="startDate">
                                        <label class="pt-4 ">Expiry Date</label>
                                        <input type="Date" class="form-control" required name="expiry" id="endDate">
                                        <label class="pt-4">Coupon Percentage</label>
                                        <input type="number" class="form-control" name="couponPercentage" placeholder="Coupon Percentage"
                                            id="couponOfferPercentage" onkeyup="validatePercentage()">
                                        <span id="percentage-error"></span>
                                    </div>
                                </div>




                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mt-3 mb-4">Add</button>
                    </form>
